{
  "name": "chess",
  "description": "An algebraic notation driven chess engine that can validate board position and produce a list of viable moves (notated).",
  "version": "0.3.0",
  "author": "Joshua Thomas (http://github.com/brozeph)",
  "engine": "node >= 4",
  "repository": {
    "type": "git",
    "url": "https://github.com/brozeph/node-chess.git"
  },
  "license": "MIT",
  "homepage": "https://brozeph.github.io/node-chess",
  "bugs": "https://github.com/brozeph/node-chess/issues",
  "keywords": [
    "chess",
    "algebraic notation"
  ],
  "main": "./dist/main.js",
  "scripts": {
    "lint": "gulp lint",
    "pretest": "gulp clean-reports && gulp lint",
    "test": "NODE_ENV=test nyc mocha -r ./test/common.js ./test/src",
    "posttest": ""
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "del": "^3.0.0",
    "eslint": "^4.19.1",
    "eslint-plugin-babel": "^5.0.0",
    "gulp": "^3.9.1",
    "gulp-babel": "^7.0.1",
    "gulp-coveralls": "^0.1.4",
    "gulp-eslint": "^4.0.2",
    "gulp-sourcemaps": "^2.6.4",
    "mocha": "^5.0.5",
    "nyc": "^11.6.0",
    "source-map-support": "^0.5.4"
  },
  "nyc": {
    "all": true,
    "include": [
      "src"
    ],
    "instrument": false,
    "report-dir": "./reports",
    "reporter": [
      "lcov",
      "text",
      "text-summary"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false
  }
}
